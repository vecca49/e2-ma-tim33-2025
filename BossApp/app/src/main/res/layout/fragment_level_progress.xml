<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/toolbar"
        layout="@layout/base_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level Progress"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnTestFormulas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEST FORMULE (check Logcat)"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#FF9800"/>

            <!-- Current Level Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Level"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvCurrentLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level 0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/tvCurrentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rookie"
                        android:textSize="20sp"
                        android:textColor="@color/accent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Power Points: "
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvCurrentPP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"/>
                    </LinearLayout>

                    <!-- Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:id="@+id/tvCurrentXP"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/tvProgressPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textStyle="bold"
                                android:textColor="@color/primary"/>

                            <TextView
                                android:id="@+id/tvRequiredXP"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="200"
                                android:textSize="14sp"
                                android:gravity="end"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progressXP"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:max="200"
                            android:progress="0"
                            style="?android:attr/progressBarStyleHorizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remaining XP:"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tvRemainingXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Task XP Values Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task XP Values (Current Level)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Difficulty XP -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Very Easy"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvVeryEasyXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 XP"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Easy"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvEasyXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 XP"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hard"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvHardXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7 XP"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Extreme"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvExtremeXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 XP"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Importance:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Importance XP -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Normal"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvNormalXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 XP"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Important"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvImportantXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 XP"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Very Important"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvVeryImportantXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 XP"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Special"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvSpecialXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 XP"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Next Level Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next Level Rewards"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Level"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvNextLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Title"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvNextTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Novice Warrior"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PP Reward"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvNextPP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+40 PP"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Required XP"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvNextRequiredXP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200 XP"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>