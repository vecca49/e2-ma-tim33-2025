<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Naziv:" />
        <EditText
            android:id="@+id/etTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis:" />
        <EditText
            android:id="@+id/etTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vreme izvršenja:" />
        <EditText
            android:id="@+id/etExecutionTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dd-MM-yyyy HH:mm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Težina:" />
        <Spinner
            android:id="@+id/spDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Važnost:" />
        <Spinner
            android:id="@+id/spImportance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sačuvaj promene"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnDeleteTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obriši zadatak"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF0000"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
