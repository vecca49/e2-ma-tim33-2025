<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Equipment Name -->
        <TextView
            android:id="@+id/tvEquipmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power Potion +20%"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>

        <!-- Equipment Description -->
        <TextView
            android:id="@+id/tvEquipmentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+20% Power (1 battle)"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"/>

        <!-- Price (Shop mode) -->
        <TextView
            android:id="@+id/tvEquipmentPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: 100 coins"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <!-- Quantity (Inventory mode - potions) -->
        <TextView
            android:id="@+id/tvEquipmentQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qty: 3"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Duration (Inventory mode - armor/temp potions) -->
        <TextView
            android:id="@+id/tvEquipmentDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 2 fights"
            android:textSize="14sp"
            android:textColor="@color/accent"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <!-- Upgrade Button (only for weapons) -->
            <Button
                android:id="@+id/btnEquipmentUpgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upgrade"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Main Action Button (Buy/Activate/Deactivate) -->
            <Button
                android:id="@+id/btnEquipmentAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>