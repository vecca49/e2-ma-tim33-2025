<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸŸ¢ ACTIVE EQUIPMENT DISPLAY -->
    <TextView
        android:id="@+id/tvActiveEquipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active: Power Potion +20%"
        android:textColor="@android:color/holo_green_light"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:background="@android:color/holo_green_dark"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/bossImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Boss image"
        android:scaleType="centerInside"
        android:src="@mipmap/boss_idle_foreground" />


    <ProgressBar
        android:id="@+id/bossHpBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:progress="100"
        android:max="200"
        android:progressTint="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/bossHpText"
        android:text="Boss HP: 200/200"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/playerPpText"
        android:text="PP: 50"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/playerPpBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:progress="100"
        android:progressTint="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/attackCountText"
        android:text="Napadi: 5/5"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/chanceText"
        android:text="Å ansa: 67%"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/attackButton"
        android:text="âš”ï¸ Napadni"
        android:layout_marginTop="24dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/resultLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chestImage"
            android:src="@mipmap/ic_chest_closed"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="Treasure chest" />

        <TextView
            android:id="@+id/rewardText"
            android:text="Dobitak:"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coinIcon"
                android:src="@android:drawable/ic_menu_info_details"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/itemIcon"
                android:src="@android:drawable/ic_menu_compass"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
