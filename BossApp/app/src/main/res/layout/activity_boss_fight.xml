<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvBossName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boss: Shadow Titan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/progressBossHP"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:max="200"
        android:progress="200"
        style="?android:attr/progressBarStyleHorizontal" />

    <TextView
        android:id="@+id/tvBossHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP: 200 / 200"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/imgBoss"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:src="@android:drawable/ic_menu_help"
        android:contentDescription="Boss image" />

    <Button
        android:id="@+id/btnAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Napadni!"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvBattleResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
